<%= form_for([@objective.trip, @objective]) do |f| %>
  <% if @objective.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@objective.errors.count, "error") %> prohibited this objective from being saved:</h4>

      <ul>
      <% @objective.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes, autofocus: true %>
  </div>

  <div>
    <%= f.collection_select :trip_id, current_user.trips.all, :id, :title %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
  <br>
<% end %>
